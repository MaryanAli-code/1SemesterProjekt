                        <TableColumn fx:id="residentName" prefWidth="98.00000190734863" text="Resident" />
                        <TableColumn fx:id="residentsAddress" prefWidth="360.66666412353516" text="Address" />
                        <TableColumn fx:id="residentsNumber" prefWidth="140.66659545898438" text="Phone Number" />
                        <TableColumn fx:id="residentsPoints" prefWidth="79.3333740234375" text="Points" />
