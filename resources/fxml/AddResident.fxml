<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="semKloeverly.presentation.controllers.AddResidentController">
   <children>
      <VBox layoutX="5.0" layoutY="4.0" prefHeight="589.0" prefWidth="698.0">
         <children>
            <Label alignment="CENTER" prefHeight="25.0" prefWidth="697.0" text="Add Resident">
               <font>
                  <Font size="16.0" />
               </font>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER_RIGHT" prefHeight="39.0" prefWidth="698.0">
               <children>
                  <Label text="Points  ">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <TextField id="pointsTextfield" fx:id="startingPoints" alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="54.0" promptText="Kun tal" text="0">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="1.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="54.0" prefWidth="698.0">
               <children>
                  <Label text="Name:">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="nameTextFieldResident" onKeyReleased="#nameFieldAddResident" prefHeight="32.0" prefWidth="273.0" promptText="Enter Name">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets right="200.0" top="110.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="47.0" prefWidth="698.0">
               <children>
                  <Label text="Surname:">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="surNameTextFieldResident" onKeyReleased="#surNameFieldAddResident" prefHeight="32.0" prefWidth="273.0" promptText="Enter Surname">
                     <HBox.margin>
                        <Insets right="200.0" />
                     </HBox.margin>
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="47.0" prefWidth="698.0">
               <children>
                  <Label text="Address:">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="addressTextFieldResident" onKeyReleased="#addressFieldAddResident" prefHeight="32.0" prefWidth="273.0" promptText="Enter Address">
                     <HBox.margin>
                        <Insets right="200.0" />
                     </HBox.margin>
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="47.0" prefWidth="698.0">
               <children>
                  <Label text="Phone Number:">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="phoneNumberTextFieldResident" onKeyReleased="#phoneFieldAddResident" prefHeight="32.0" prefWidth="273.0" promptText="Enter Number">
                     <HBox.margin>
                        <Insets right="200.0" />
                     </HBox.margin>
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="251.0" prefWidth="698.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#saveNewResidentButton" prefHeight="25.0" prefWidth="133.0" text="Save Resident">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#cancelNewResident" prefHeight="25.0" prefWidth="133.0" text="Cancel">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
